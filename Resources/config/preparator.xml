    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="menu.preparator.class">Knplabs\Bundle\MenuBundle\Templating\Preparator\MenuPreparator</parameter>
    </parameters>

    <services>
        <service id="menu.preparator" class="%menu.preparator.class%">
            <argument type="service" id="menu.provider" />
        </service>
    </services>

</container>
