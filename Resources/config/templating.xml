<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="templating.helper.menu.class">Knplabs\Bundle\MenuBundle\Templating\Helper\MenuHelper</parameter>
    </parameters>

    <services>
        <service id="templating.helper.menu" class="%templating.helper.menu.class%" public="false">
            <tag name="templating.helper" alias="menu" />
            <argument type="service" id="menu.preparator" />
            <argument type="service" id="templating" />
        </service>
    </services>

</container>
